<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Whatsapp (mini)</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <h3>All Chats!</h3>

    <%for(let chat of chats){%>
    <div class="chat">
      <p>To:<%=chat.to%></p>
      <p class="msg">"<%=chat.msg%>"</p>
      <p>From:<%=chat.from%></p>
      <div class="btns">
        <form action="/chats/<%=chat._id%>">
          <button>Edit</button>
        </form>
        <form action="/chats/<%=chat._id%>?_method=DELETE" method="post">
          <button>Delete</button>
        </form>
      </div>
      <!-- <p>Time:</p> -->
    </div>
    <%}%>

    <form action="/chats/new">
      <button>New Chat</button>
    </form>
  </body>
</html>
